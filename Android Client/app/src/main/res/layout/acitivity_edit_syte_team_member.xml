<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/xRelLayMain"
    android:background="@color/color_white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--TOP BAR-->
    <RelativeLayout
        android:id="@+id/xRellayTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_ht"
        android:background="?attr/colorPrimary"
        android:padding="@dimen/toolbar_padding">
        <RelativeLayout
            android:id="@+id/xRelLayBack"
            android:layout_width="@dimen/toolbar_icon_sz"
            android:layout_height="@dimen/toolbar_icon_sz"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_width="@dimen/toolbar_icon_content_sz"
                android:layout_height="@dimen/toolbar_icon_content_sz"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_action_bar_back_btn"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/xRelLaySave"
            android:layout_width="@dimen/toolbar_icon_sz"
            android:layout_height="@dimen/toolbar_icon_sz"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_width="@dimen/toolbar_icon_content_sz"
                android:layout_height="@dimen/toolbar_icon_content_sz"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_action_bar_success"/>
        </RelativeLayout>

        <com.syte.widgets.TvRobortoRegular
            android:id="@+id/xPageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dp"
            android:textSize="@dimen/toolbar_lbl_sz"
            android:textColor="@color/color_white"
            android:text="@string/add_syte_edit_tm_mem_page_title"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/xRelLaySave"
            android:paddingRight="@dimen/toolbar_icon_margin"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_btm_shadow_sz"
        android:background="@drawable/shadow"
        android:layout_below="@+id/xRellayTop"/>
    <!--END TOP BAR-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xRellayTop"
        android:scrollbars="none"
        android:layout_above="@+id/xTvSave">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/xRellayTeamMemberImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/add_syte_otional_details_image_sz"
        android:layout_below="@+id/xRellayTop"
        android:background="@color/color_txtvw_top_lbl_bg">
        <ImageView
            android:id="@+id/xIvTeamMemberImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_syte_user_no_image"/>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/xIvAddTmProfilePic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_edit_photo"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            app:backgroundTint="@color/color_orange"/>
        <ProgressBar
            android:id="@+id/xPbLoader"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:visibility="gone"/>
    </RelativeLayout>
    <!--<ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xRellayTeamMemberImage"
        android:scrollbars="none"
        android:layout_above="@+id/xLinLayBtm">-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/add_syte_address_page_padding"
            android:paddingRight="@dimen/add_syte_address_page_padding"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/add_syte_address_page_vertical_margin"
            android:paddingBottom="@dimen/add_syte_address_page_vertical_margin">
            <com.syte.widgets.EditTextLblSmall
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_syte_add_tm_mem_page_lbl1"/>
            <com.syte.widgets.EtRobortoRegular
                android:id="@+id/xEtTmName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="6"
                android:hint="@string/add_syte_add_tm_mem_page_hint_et1"
                android:singleLine="true"
                android:layout_marginBottom="@dimen/add_syte_address_page_vertical_margin"/>
            <com.syte.widgets.EditTextLblSmall
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_syte_add_tm_mem_page_lbl2"/>
            <com.syte.widgets.EtRobortoRegular
                android:id="@+id/xEtTmDesignation"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="6"
                android:hint="@string/add_syte_add_tm_mem_page_hint_et2"
                android:singleLine="true"
                android:layout_marginBottom="@dimen/add_syte_address_page_vertical_margin"/>
            <com.syte.widgets.EditTextLblSmall
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_syte_add_tm_mem_page_lbl3"/>
            <com.syte.widgets.EtRobortoRegular
                android:id="@+id/xEtTmProfile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="6"
                android:hint="@string/add_syte_add_tm_mem_page_hint_et3"/>

        </LinearLayout></LinearLayout>

    </ScrollView>
    <LinearLayout
        android:id="@+id/xLinLayBtm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/add_syte_otional_details_button_ht"
            android:orientation="horizontal">
            <com.syte.widgets.TvRobortoMedium
                android:id="@+id/xTvDelete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/add_syte_otional_details_button_txt_sz"
                android:textColor="@color/color_orange"
                android:gravity="center"
                android:background="@color/color_txtvw_top_lbl_bg"
                android:text="@string/add_syte_edit_tm_mem_page_btn_delete"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E0E0E0"/>
            <com.syte.widgets.TvRobortoMedium
                android:id="@+id/xTvHide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/add_syte_otional_details_button_txt_sz"
                android:textColor="@color/color_orange"
                android:gravity="center"
                android:background="@color/color_txtvw_top_lbl_bg"
                android:text="@string/add_syte_edit_tm_mem_page_btn_hide"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>