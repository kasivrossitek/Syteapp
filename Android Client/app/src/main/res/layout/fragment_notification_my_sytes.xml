<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/xRvNotifications"
        android:layout_width="match_parent"
        android:layout_above="@+id/xTvClearNow"
        android:layout_height="match_parent"
        android:scrollbars="none"/>

    <TextView
        android:id="@+id/xTvCenterLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#000000"
        android:layout_margin="@dimen/notification_item_margin"
        android:textSize="@dimen/notification_item_message_sz"
        android:text="Notification My Sytes"/>

    <com.syte.widgets.TvRobortoMedium
        android:id="@+id/xTvClearNow"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_orange"
        android:gravity="center"
        android:text="@string/notification_page_clear_now"
        android:textColor="@color/color_white"
        android:textSize="@dimen/notification_clear_now_button_txt_sz"/>

</RelativeLayout>