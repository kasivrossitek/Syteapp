<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/login_background">

    <TextView
        android:id="@+id/xTvVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/login_bottom_btn_padding"
        android:text=""
        android:textColor="#ffffff"
        android:textSize="@dimen/login_bottom_btn_text_size"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/splash_welcome_layout_margin_top"
        android:gravity="center_horizontal"

        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/login_linear_layout_margin"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Welcome to"
                android:textColor="#ffffff"
                android:textSize="@dimen/splash_welcome_text_size"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/login_linear_layout_margin"
                android:src="@drawable/logo_white"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/splash_welcome_text_size"
            android:text="Uncover and nurture your neighborhood"
            android:textColor="#ffffff"
            android:textSize="@dimen/login_bottom_btn_text_size"/>


    </LinearLayout>

    <TextView
        android:id="@+id/xTvGetStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FE8A14"
        android:gravity="center"
        android:padding="@dimen/login_bottom_btn_padding"
        android:text="GET STARTED"
        android:textColor="#ffffff"
        android:textSize="@dimen/login_bottom_btn_text_size"/>


</RelativeLayout>
