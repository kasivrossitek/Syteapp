<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/xLinLayNotification"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/notification_item_ht"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="@dimen/notification_item_image_layout_wd_ht"
        android:layout_height="@dimen/notification_item_image_layout_wd_ht"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/xIvNotificationImage"
            android:layout_width="@dimen/notification_item_image_wd_ht"
            android:layout_height="@dimen/notification_item_image_wd_ht"
            android:layout_centerInParent="true"/>

        <!--<ProgressBar
            android:id="@+id/xPbLoader"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerInParent="true"/>-->

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/notification_item_margin"
        android:layout_marginTop="@dimen/notification_item_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.syte.widgets.TvRobortoRegular
            android:id="@+id/xTvNotificationMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Message sdfhjsakdhfjs dsjhfadsjhfskjda sdjfhakfhkjsdhfsa hjdshkj"
            android:textColor="@color/color_black_opacity_87"
            android:textSize="@dimen/notification_item_message_sz"/>

        <com.syte.widgets.TvRobortoRegular
            android:id="@+id/xTvNotificationTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Mar, 12, 2016 03:15 p.m"
            android:textColor="@color/color_black_opacity_54"
            android:textSize="@dimen/notification_item_date_time_sz"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/xIvDelete"
        android:layout_width="@dimen/notification_item_delete_wd_ht"
        android:layout_height="@dimen/notification_item_delete_wd_ht"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/notification_item_margin"
        android:src="@drawable/ic_generic_close"/>

</LinearLayout>