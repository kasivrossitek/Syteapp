<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">
        <RelativeLayout
            android:id="@+id/xRellayTop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_ht"
            android:background="?attr/colorPrimary"
            android:padding="@dimen/toolbar_padding"
            android:orientation="horizontal">
            <com.syte.widgets.TvRobortoRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="56dp"
                android:textSize="@dimen/toolbar_lbl_sz"
                android:textColor="@color/color_white"
                android:text="@string/signup_screen_title"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_btm_shadow_sz"
            android:background="@drawable/shadow"
            android:layout_below="@+id/xRellayTop"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/xRellayTop"
        android:layout_above="@+id/xTvDone"
        android:padding="@dimen/padding_l_r"
        android:visibility="visible">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:layout_centerInParent="true"
            android:padding="@dimen/popup_content_padding"
            android:orientation="vertical">
            <com.syte.widgets.EditTextLblSmall
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/signup_screen_lbl_profile"/>
            <ImageView
                android:id="@+id/xIvProfilepic"
                android:layout_width="@dimen/sign_up_profile_pic_sz"
                android:layout_height="@dimen/sign_up_profile_pic_sz"
                android:src="@drawable/fields_profile_picture"
                android:layout_marginBottom="@dimen/popup_content_paddingBottom"/>
            <com.syte.widgets.EditTextLblSmall
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/signup_screen_lbl_name"/>
            <com.syte.widgets.EtRobortoRegular
                android:id="@+id/xEtUsrName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/mob_num_name_hint"
                android:inputType="textPersonName"
                android:singleLine="true"
                android:layout_marginBottom="@dimen/popup_content_paddingBottom"/>
            <com.syte.widgets.EditTextLblSmall
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/signup_screen_lbl_gender"/>
            <RadioGroup
                android:id="@+id/xRgGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/popup_content_paddingBottom"
                android:checkedButton="@+id/xRbMale">
                    <RadioButton
                        android:id="@+id/xRbMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:textSize="@dimen/edittext_txt_sz"
                        android:textColor="@color/color_edit_text"
                        android:layout_marginRight="@dimen/popup_btn_lay_padding"/>
                    <RadioButton
                        android:id="@+id/xRbFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:textSize="@dimen/edittext_txt_sz"
                        android:textColor="@color/color_edit_text"
                        android:checked="false" />
            </RadioGroup>
            <com.syte.widgets.TvRobortoRegular
                android:id="@+id/xTvTermandCondition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/signup_screen_lbl_tc"
                android:textColor="@color/color_popup_body"
                android:textSize="@dimen/popup_body_txt_sz"/>
        </LinearLayout>


    </RelativeLayout>
<com.syte.widgets.TvRobortoRegular
        android:id="@+id/xTvDone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_ht"
        android:layout_alignParentBottom="true"
        android:background="@color/color_white"
        android:gravity="center"
        android:text="DONE"
        android:textColor="@color/color_popup_body"
        android:textSize="@dimen/toolbar_lbl_sz"/>

</RelativeLayout>