<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">
        <RelativeLayout
            android:id="@+id/xRellayTop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_ht"
            android:background="?attr/colorPrimary"
            android:padding="@dimen/toolbar_padding"
            android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/xRelLayBack"
                    android:layout_width="@dimen/toolbar_icon_sz"
                    android:layout_height="@dimen/toolbar_icon_sz"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true">
                        <ImageView
                            android:layout_width="@dimen/toolbar_icon_content_sz"
                            android:layout_height="@dimen/toolbar_icon_content_sz"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_action_bar_back_btn"/>
                </RelativeLayout>
                <com.syte.widgets.TvRobortoRegular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="56dp"
                    android:textSize="@dimen/toolbar_lbl_sz"
                    android:textColor="@color/color_white"
                    android:text="@string/otp_verification_screen_title"
                    android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_btm_shadow_sz"
            android:background="@drawable/shadow"
            android:layout_below="@+id/xRellayTop"/>
        <com.syte.widgets.TvRobortoRegular
            android:id="@+id/xTvVerify"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_ht"
            android:layout_alignParentBottom="true"
            android:background="@color/color_white"
            android:gravity="center"
            android:text="VERIFY"
            android:textColor="@color/color_popup_body"
            android:textSize="@dimen/toolbar_lbl_sz"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/xRellayTop"
        android:layout_above="@+id/xTvVerify"
        android:padding="@dimen/padding_l_r">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:layout_centerInParent="true"
            android:padding="@dimen/popup_content_padding"
            android:orientation="vertical">
            <com.syte.widgets.TvRobortoRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/otp_verification_lbl1"
                android:textColor="@color/color_popup_body"
                android:textSize="@dimen/popup_body_txt_sz"
                android:paddingBottom="@dimen/popup_content_paddingBottom"/>
            <com.syte.widgets.PinEntryView
                android:id="@+id/xPEVOtp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:accentType="character"
                app:digitBackground="@drawable/background_border"
                app:digitElevation="@dimen/toolbar_btm_shadow_sz"
                app:digitHeight="@dimen/opt_verification_pin_sz"
                app:digitWidth="@dimen/opt_verification_pin_sz"
                app:digitSpacing="@dimen/popup_btn_padding"
                app:digitTextColor="@color/color_edit_text"
                app:digitTextSize="@dimen/edittext_txt_sz"
                app:mask=""
                app:numDigits="6"
                app:pinAccentColor="@color/color_edit_text"
                android:paddingBottom="@dimen/popup_content_paddingBottom"/>
            <com.syte.widgets.TvRobortoRegular
                android:id="@+id/xTvOTPResend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/otp_verification_resend"
                android:textColor="@color/color_popup_body"
                android:textSize="@dimen/popup_body_txt_sz"
                />

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>
