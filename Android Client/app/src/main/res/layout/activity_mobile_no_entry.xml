<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">
       <RelativeLayout
            android:id="@+id/xRellayTop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_ht"
            android:background="?attr/colorPrimary"
            android:padding="@dimen/toolbar_padding"
            android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/xRelLayBack"
                    android:layout_width="@dimen/toolbar_icon_sz"
                    android:layout_height="@dimen/toolbar_icon_sz"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true">
                    <ImageView
                        android:layout_width="@dimen/toolbar_icon_content_sz"
                        android:layout_height="@dimen/toolbar_icon_content_sz"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_action_bar_back_btn"/>

                </RelativeLayout>

                <com.syte.widgets.TvRobortoRegular
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="56dp"
                   android:textSize="@dimen/toolbar_lbl_sz"
                   android:textColor="@color/color_white"
                   android:text="@string/mob_num_entry_hint"
                   android:layout_centerVertical="true"/>
       </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_btm_shadow_sz"
            android:background="@drawable/shadow"
            android:layout_below="@+id/xRellayTop"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/xRellayTop"
            android:layout_above="@+id/xTvNext"
            android:padding="@dimen/padding_l_r">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/popup_content_padding"
                    android:orientation="vertical">
                    <com.syte.widgets.EditTextLblSmall
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mob_num_entry_lbl1"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        android:paddingBottom="@dimen/popup_content_paddingBottom">
                        <com.syte.widgets.TvRobortoRegular
                            android:id="@+id/xTvCountryCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/edittext_txt_sz"
                            android:textColor="@color/color_edit_text"
                            android:layout_marginRight="@dimen/popup_btn_padding"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:text="+91"
                            android:background="@drawable/background_edittext"
                            android:drawablePadding="@dimen/popup_btn_padding"
                            android:drawableRight="@drawable/ic_generic_drop_down_16px"/>
                        <com.syte.widgets.EtRobortoRegular
                            android:id="@+id/xEtPhNo"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:ems="6"
                            android:hint="@string/mob_num_entry_hint"
                            android:inputType="number"
                            android:singleLine="true"/>

                    </LinearLayout>

                    <com.syte.widgets.TvRobortoRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="@string/mob_num_entry_lbl3"
                        android:textColor="@color/color_popup_body"
                        android:textSize="@dimen/popup_body_txt_sz"/>
                </LinearLayout>

        </RelativeLayout>


    <com.syte.widgets.TvRobortoRegular
        android:id="@+id/xTvNext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_ht"
        android:layout_alignParentBottom="true"
        android:background="@color/color_white"
        android:gravity="center"
        android:text="NEXT"
        android:textColor="@color/color_popup_body"
        android:textSize="@dimen/toolbar_lbl_sz"/>

</RelativeLayout>