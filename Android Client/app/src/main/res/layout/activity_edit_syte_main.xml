<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/xRelLayMain"
    android:background="@color/color_white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!--TOP BAR-->
    <RelativeLayout
        android:id="@+id/xRellayTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_ht"
        android:background="?attr/colorPrimary"
        android:padding="@dimen/toolbar_padding">
        <RelativeLayout
            android:id="@+id/xRelLayBack"
            android:layout_width="@dimen/toolbar_icon_sz"
            android:layout_height="@dimen/toolbar_icon_sz"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_width="@dimen/toolbar_icon_content_sz"
                android:layout_height="@dimen/toolbar_icon_content_sz"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_action_bar_back_btn"/>
        </RelativeLayout>
        <com.syte.widgets.TvRobortoRegular
            android:id="@+id/xPageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dp"
            android:textSize="@dimen/toolbar_lbl_sz"
            android:textColor="@color/color_white"
            android:text="@string/edit_syte_main_page_title"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:layout_toLeftOf="@+id/xRelLaySave"
            android:paddingRight="@dimen/toolbar_icon_margin"/>
        <RelativeLayout
            android:id="@+id/xRelLaySave"
            android:layout_width="@dimen/toolbar_icon_sz"
            android:layout_height="@dimen/toolbar_icon_sz"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="gone">
            <ImageView
                android:layout_width="@dimen/toolbar_icon_content_sz"
                android:layout_height="@dimen/toolbar_icon_content_sz"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_action_bar_success"/>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_btm_shadow_sz"
        android:background="@drawable/shadow"
        android:layout_below="@+id/xRellayTop"/>
    <!--END TOP BAR-->
    <RelativeLayout
        android:id="@+id/xRellaySyteImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/add_syte_otional_details_image_sz"
        android:layout_below="@+id/xRellayTop"
        android:background="@color/color_txtvw_top_lbl_bg">
        <ImageView
            android:id="@+id/xIvSyteImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_syte_no_image"/>
        <ProgressBar
            android:id="@+id/xPbUpLoader"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_alignParentBottom="true"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:indeterminate="true"
            android:paddingLeft="@dimen/add_syte_address_page_padding"
            android:paddingRight="@dimen/add_syte_address_page_padding"
            android:visibility="gone"/>
        <ProgressBar
            android:id="@+id/xPbLoader"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:visibility="gone"/>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/xIvAddSyteImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_edit_photo"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            app:backgroundTint="@color/color_orange"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/xLinLayBtm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/add_syte_otional_details_button_ht"
            android:orientation="horizontal">
            <com.syte.widgets.TvRobortoMedium
                android:id="@+id/xTvPublish"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/add_syte_otional_details_button_txt_sz"
                android:textColor="@color/color_orange"
                android:gravity="center"
                android:background="@color/color_txtvw_top_lbl_bg"
                android:text="@string/add_syte_optional_details_page_btn_publish"
                android:visibility="gone"/>
            <View
                android:id="@+id/xBtmBtnDivider"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E0E0E0"
                android:visibility="gone"/>
            <com.syte.widgets.TvRobortoMedium
                android:id="@+id/xTvPreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/add_syte_otional_details_button_txt_sz"
                android:textColor="@color/color_orange"
                android:gravity="center"
                android:background="@color/color_txtvw_top_lbl_bg"
                android:text="@string/add_syte_optional_details_page_btn_preview"/>
        </LinearLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/xRellaySyteImage"
        android:layout_above="@+id/xLinLayBtm"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/xRelLaySyteDetails"
                android:layout_width="match_parent"
                android:layout_height="@dimen/add_syte_otional_details_unit_ht"
                android:paddingLeft="@dimen/add_syte_address_page_padding"
                android:paddingRight="@dimen/add_syte_address_page_padding"
                android:background="@color/color_white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/xIvAbtus">
                    <com.syte.widgets.EditTextLblMedium
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/edit_syte_main_page_lbl1_unit1"/>
                    <com.syte.widgets.TvRobortoRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/add_syte_otional_details_lbl2_txt_sz"
                        android:textColor="@color/color_black_opacity_26"
                        android:text="@string/edit_syte_main_page_lbl2_unit1"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/xIvAbtus"
                    android:layout_width="@dimen/add_syte_otional_details_rht_arr_sz"
                    android:layout_height="@dimen/add_syte_otional_details_rht_arr_sz"
                    android:src="@drawable/ic_my_sytes_more_arrow"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/xRelLaySyteLocation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/add_syte_otional_details_unit_ht"
                android:background="@color/color_txtvw_top_lbl_bg"
                android:paddingLeft="@dimen/add_syte_address_page_padding"
                android:paddingRight="@dimen/add_syte_address_page_padding">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/xIvOt">
                    <com.syte.widgets.EditTextLblMedium
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/edit_syte_main_page_lbl1_unit2"/>
                    <com.syte.widgets.TvRobortoRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/add_syte_otional_details_lbl2_txt_sz"
                        android:textColor="@color/color_black_opacity_26"
                        android:text="@string/edit_syte_main_page_lbl2_unit1"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/xIvOt"
                    android:layout_width="@dimen/add_syte_otional_details_rht_arr_sz"
                    android:layout_height="@dimen/add_syte_otional_details_rht_arr_sz"
                    android:src="@drawable/ic_my_sytes_more_arrow"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/xRelLaySyteAbtUs"
                android:layout_width="match_parent"
                android:layout_height="@dimen/add_syte_otional_details_unit_ht"
                android:background="@color/color_white"
                android:paddingLeft="@dimen/add_syte_address_page_padding"
                android:paddingRight="@dimen/add_syte_address_page_padding">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/xIvWWD">
                    <com.syte.widgets.EditTextLblMedium
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/edit_syte_main_page_lbl1_unit3"/>
                    <com.syte.widgets.TvRobortoRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/add_syte_otional_details_lbl2_txt_sz"
                        android:textColor="@color/color_black_opacity_26"
                        android:text="@string/edit_syte_main_page_lbl2_unit3"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/xIvWWD"
                    android:layout_width="@dimen/add_syte_otional_details_rht_arr_sz"
                    android:layout_height="@dimen/add_syte_otional_details_rht_arr_sz"
                    android:src="@drawable/ic_my_sytes_more_arrow"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/xRelLaySyteTeamMembers"
                android:layout_width="match_parent"
                android:layout_height="@dimen/add_syte_otional_details_unit_ht"
                android:background="@color/color_txtvw_top_lbl_bg"
                android:paddingLeft="@dimen/add_syte_address_page_padding"
                android:paddingRight="@dimen/add_syte_address_page_padding">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/xIvOt1">
                    <com.syte.widgets.EditTextLblMedium
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/edit_syte_main_page_lbl1_unit4"/>
                    <com.syte.widgets.TvRobortoRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/add_syte_otional_details_lbl2_txt_sz"
                        android:textColor="@color/color_black_opacity_26"
                        android:text="@string/edit_syte_main_page_lbl2_unit4"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/xIvOt1"
                    android:layout_width="@dimen/add_syte_otional_details_rht_arr_sz"
                    android:layout_height="@dimen/add_syte_otional_details_rht_arr_sz"
                    android:src="@drawable/ic_my_sytes_more_arrow"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/xRelLaySyteWwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/add_syte_otional_details_unit_ht"
                android:background="@color/color_white"
                android:paddingLeft="@dimen/add_syte_address_page_padding"
                android:paddingRight="@dimen/add_syte_address_page_padding">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/xIvWWD1">
                    <com.syte.widgets.EditTextLblMedium
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/edit_syte_main_page_lbl1_unit5"/>
                    <com.syte.widgets.TvRobortoRegular
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/add_syte_otional_details_lbl2_txt_sz"
                        android:textColor="@color/color_black_opacity_26"
                        android:text="@string/edit_syte_main_page_lbl2_unit5"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/xIvWWD1"
                    android:layout_width="@dimen/add_syte_otional_details_rht_arr_sz"
                    android:layout_height="@dimen/add_syte_otional_details_rht_arr_sz"
                    android:src="@drawable/ic_my_sytes_more_arrow"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>



</RelativeLayout>