<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:padding="8dp"
     >

        <ImageView
            android:id="@+id/search"
            android:layout_width="@dimen/add_syte_otional_details_add_image_ic_sz"
            android:layout_height="@dimen/add_syte_otional_details_add_image_ic_sz"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_action_bar_search" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/search"
            android:orientation="horizontal">

            <com.syte.widgets.EtRobortoRegular
                android:id="@+id/xEtSearchContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="6"
                android:padding="@dimen/map_screen_search_box_padding"
                android:hint="@string/followers_search_screen_search_box_hint"
                android:singleLine="true" />
        </LinearLayout>

        <ImageView
            android:id="@+id/search_close"
            android:layout_width="@dimen/add_syte_otional_details_add_image_ic_sz"
            android:layout_height="@dimen/add_syte_otional_details_add_image_ic_sz"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_generic_close" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_btm_shadow_sz"
        android:background="@drawable/shadow" />

</LinearLayout>
